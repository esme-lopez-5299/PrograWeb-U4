
@{
    Layout = "_Layout";
   var Id = int.Parse(@User.Claims.FirstOrDefault(x => x.Type == "IdUsuario").Value);
}


<h1 class="titulo">¡Bienvenido  @User.Claims.FirstOrDefault(x => x.Type == "NombreUsuario").Value! </h1>
<div class="formularios">
    <h4>¿Qué deseas hacer?</h4>
    <a href="~/Home/LogOut">Cerrar Sesión</a>
    <a href="~/Home/ResetContraseña/@Id">Cambiar Password</a>
    <a href="~/Home/EliminarPerfil/@Id">Eliminar cuenta</a>
</div>
